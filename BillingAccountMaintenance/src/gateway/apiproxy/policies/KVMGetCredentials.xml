<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<KeyValueMapOperations async="false" continueOnError="false" enabled="true" name="KVMGetCredentials" mapIdentifier="BillingAccountMaintenance_Encrypted">
    <DisplayName>KVM.GetCredentials</DisplayName>
    <!-- The 'private' prefix is required when acessing encrypted KVMs. It hides the encrypted values from API proxy Trace and debug sessions. -->
    <Get assignTo="private.username" index="1">
        <Key>
            <Parameter>BAM-user</Parameter>
        </Key>
    </Get>
    <Get assignTo="private.password" index="1">
        <Key>
            <Parameter>BAM-pass</Parameter>
        </Key>
    </Get>
    <Scope>environment</Scope>
</KeyValueMapOperations>